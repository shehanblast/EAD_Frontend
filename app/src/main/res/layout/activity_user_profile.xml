<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".UserHandler.Profile">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/flame" />

    <TextView
        android:id="@+id/textUserprofileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Profile"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:layout_width="wrap_content"
       android:id="@+id/userProfileRefresh"
       android:layout_height="wrap_content">
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Full Name"
                   android:layout_marginTop="70dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:layout_margin="10dp"
                   android:background="@drawable/round_border"
                   android:hint=" Full Name"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileName"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Email"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_margin="10dp"
                   android:hint=" Email"
                   android:inputType="textEmailAddress"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileEmail"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Mobile No"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_margin="10dp"
                   android:hint=" Mobile"
                   android:inputType="phone"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileMobile"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Role Type"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_margin="10dp"
                   android:hint=" User Role"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileRole"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Vehicle Type"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_margin="10dp"
                   android:hint=" Vehicle Type"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileVehicleType"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Vehicle No"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_margin="10dp"
                   android:hint=" Vehicle No"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileVehicleNo"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Fuel Type"
                   android:layout_marginTop="5dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="20dp"/>

               <EditText
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_margin="10dp"
                   android:hint=" Fuel Type"
                   android:layout_marginTop="20dp"
                   android:id="@+id/txtUserProfileFuelType"/>

               <Button
                   android:id="@+id/btnUserProfileUpdate"
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:background="@drawable/round_border"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:text="Update"
                   android:textColor="#EDE8E8"
                   android:textSize="18sp"/>

               <Button
                   android:id="@+id/btnUserProfileDelete"
                   android:layout_width="373dp"
                   android:layout_height="60dp"
                   android:layout_marginTop="10dp"
                   android:background="@drawable/round_border"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:text="Delete"
                   android:textColor="#EDE8E8"
                   android:textSize="18sp"/>

           </LinearLayout>
       </ScrollView>
   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>