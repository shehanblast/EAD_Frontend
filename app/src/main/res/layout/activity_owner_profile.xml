<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:layout_margin="10dp"
    tools:context=".OwnerHandler.ProfileOwner">

    <ImageView
        android:id="@+id/imgOwnerProfile"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/flame" />

    <TextView
        android:id="@+id/lblOwnerProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Profile"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Full Name"
                android:id="@+id/txtOwnerProfilesName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:id="@+id/txtOwnerProfilesEmail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No "
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Mobile"
                android:inputType="phone"
                android:id="@+id/txtOwnerProfilesMobile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role Type"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="User Role"
                android:id="@+id/txtOwnerProfilesRole"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Station Name"
                android:id="@+id/txtOwnerProfilesStationName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station No"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Station No"
                android:id="@+id/txtOwnerProfilesStationNo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="City"
                android:id="@+id/txtOwnerProfilesCity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Address"
                android:id="@+id/txtOwnerProfilesAddress"/>

            <Button
                android:id="@+id/btnOwnerProfileUpdate"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Update"
                android:textColor="#EDE8E8"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnOwnerProfileBack"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Delete"
                android:textColor="#EDE8E8"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>