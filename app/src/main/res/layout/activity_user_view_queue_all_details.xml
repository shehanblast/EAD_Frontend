<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/viewQueueRefresh"
    tools:context=".QueueHandler.ShowAllQueueUserInfo">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="View Queue Details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/darkblue"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Name"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Vehicle Type"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueVehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Vehicle No"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueVehicleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Vehicle No"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Fuel Type"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueFuelType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fuel Type"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Station Name"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Station Name"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Station No"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueStationNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Station No"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Arrival Time"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewQueueStationArrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arrival Time"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Queue Length"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/circle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/textViewAllQueueLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Queue Length"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnViewStop"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Exit"
                android:textColor="#EDE8E8"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btnViewQueueAllBack"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Back"
                android:textColor="#EDE8E8"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>