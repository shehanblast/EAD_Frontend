<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".UserHandler.Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50px"
                android:fontFamily="sans-serif-black"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="40dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="159dp"
                android:layout_height="172dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/flame" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45px"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtRegisterFullName"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:layout_marginTop="80px"
                android:padding="16dp"
                android:textColor="#100E0E"
                android:textColorHint="#817B7B" />

            <EditText
                android:id="@+id/txtRegisterEmail"
                android:layout_marginTop="10dp"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#1E1818"
                android:textColorHint="#958E8E"/>

            <EditText
                android:id="@+id/txtRegisterMobile"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:hint="Mobile"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#7C7676" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type*"
                android:layout_margin="10dp"
                android:textSize="15dp"/>

            <Spinner
                android:id="@+id/ddRegisterRole"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.89"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.832" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/customerLayer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type*"
                    android:layout_margin="10dp"
                    android:textSize="15dp"/>

                <Spinner
                    android:id="@+id/ddRegisterVehicleType"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.89"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.832" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle No*"
                    android:layout_margin="10dp"
                    android:textSize="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtRegisterVehicleNo1"
                        android:layout_width="373dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_border"
                        android:layout_marginTop="10dp"

                        android:hint="ABC"
                        android:layout_margin="10dp"
                        android:padding="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#7C7676" />
                    <EditText
                        android:id="@+id/txtRegisterVehicleNo2"
                        android:layout_width="373dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_border"
                        android:layout_marginTop="10dp"
                        android:hint="1234"
                        android:inputType="number"
                        android:layout_margin="10dp"
                        android:padding="16dp"
                        android:textColor="#000000"
                        android:textColorHint="#7C7676" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel Type*"
                    android:layout_margin="10dp"
                    android:textSize="15dp"/>

                <Spinner
                    android:id="@+id/ddRegisterFuelType"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.89"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.832" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ownerLayer">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select City*"
                    android:layout_margin="10dp"
                    android:textSize="15dp"/>

                <Spinner
                    android:id="@+id/ddRegisterCity"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.89"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.832" />

                <EditText
                    android:id="@+id/txtRegisterAddress"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:background="@drawable/round_border"
                    android:layout_marginTop="10dp"
                    android:hint="Address"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#7C7676" />

                <EditText
                    android:id="@+id/txtRegisterStationName"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:layout_marginTop="10dp"
                    android:hint="Station Name"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#7C7676" />

                <EditText
                    android:id="@+id/txtRegisterStationNo"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:layout_marginTop="10dp"
                    android:hint="Station No"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#7C7676" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtRegisterPassword"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#0B0909"
                android:textColorHint="#8E8282"/>

            <EditText
                android:id="@+id/txtRegisterRetypePassword"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:hint="Re Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#100F0F"
                android:textColorHint="#8A8080" />

            <Button
                android:id="@+id/btnRegisterCreateAccount"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:text="Create Account"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblForgot"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:text="Already Have An Account?"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRegisterSingIn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="signin"
                    android:textColor="@color/darkblue"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>