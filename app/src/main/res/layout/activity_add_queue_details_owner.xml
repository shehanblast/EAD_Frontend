<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:layout_margin="10dp"
    tools:context=".OwnerHandler.InsertOwnerFuelInfo">

    <ImageView
        android:id="@+id/imgAddFuelView"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/flame" />

    <TextView
        android:id="@+id/lblAddFuelDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Add Fuel Details"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Station Name"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtAddFuelStationOwner"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:hint="Station Name"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />
            </LinearLayout>

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:text="Station No"-->
<!--                android:textSize="20dp"-->
<!--                android:textAlignment="textStart"-->
<!--                android:textColor="@color/black" />-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_margin="10dp"-->
<!--                android:orientation="horizontal">-->
<!--                <EditText-->
<!--                    android:id="@+id/txtAddFuelStationNoOwner"-->
<!--                    android:layout_width="373dp"-->
<!--                    android:layout_height="60dp"-->
<!--                    android:background="@drawable/round_border"-->
<!--                    android:hint="Station No"-->

<!--                    android:textAlignment="textStart"-->
<!--                    android:textColor="@color/black" />-->
<!--            </LinearLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Fuel Type"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/ddFuelTypeOwner"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                     />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Arrival Time"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txtAddFuelStationArrivalTimeOwner"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                    android:hint="Arrival Time"
                    android:inputType="datetime"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Fuel Finish"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/ddFuelFinishStatusOwner"
                    android:layout_width="373dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_border"
                     />
            </LinearLayout>

            <Button
                android:id="@+id/btnAddFuelDetails"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Add/UPDATE"
                android:textColor="#EDE8E8"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnUpdateFuelOwner"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="View Fuel details"
                android:textColor="#EDE8E8"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnBackAddFuel"
                android:layout_width="373dp"
                android:layout_height="60dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Back"
                android:textColor="#EDE8E8"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>